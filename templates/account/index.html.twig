{% extends 'base.html.twig' %}

{% block title %}Login - InvestFolio{% endblock %}

{% block body %}
    <section class="auth-section">
        <div class="container">
            <div class="auth-container">
                <div class="auth-form-container purple-gradient">
                    <h1 class="auth-title">Welcome Back</h1>
                    <p class="auth-description">Log in to access your investment portfolio</p>

                    <form class="auth-form" action="/login" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required class="form-control">
                        </div>

                        <div class="form-group form-checkbox">
                            <input type="checkbox" id="remember_me" name="remember_me" class="form-checkbox-input">
                            <label for="remember_me" class="form-checkbox-label">Remember me</label>
                            <a href="/forgot-password" class="forgot-password">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>

                    <div class="auth-footer">
                        <p>Don't have an account? <a href="/register" class="auth-link">Register</a></p>
                    </div>
                </div>

                <div class="auth-image-container blue-gradient">
                    <div class="auth-image-content">
                        <i data-lucide="trending-up" class="auth-image-icon"></i>
                        <h2 class="auth-image-title">Track Your Investments</h2>
                        <p class="auth-image-description">Get insights into your portfolio performance and make informed decisions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

