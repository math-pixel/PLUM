{% extends 'base.html.twig' %}

{% block title %}New Transaction{% endblock %}

{% block body %}
    <h1>Create New Transaction</h1>

    {{ form_start(form) }}
    {{ form_row(form.quantity) }}
    {{ form_row(form.price) }}
    {{ form_row(form.asset) }}
    {{ form_rest(form) }}
    <button class="btn">Save</button>
    {{ form_end(form) }}

    <a href="{{ path('app_transaction_index') }}">back to list</a>
{% endblock %}