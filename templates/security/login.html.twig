{% extends 'base.html.twig' %}

{% block title %}Login - InvestFolio{% endblock %}

{% block body %}
    <section class="auth-section">
        <div class="container">
            <div class="auth-container">
                <div class="auth-form-container purple-gradient">
                    <h1 class="auth-title">Welcome Back</h1>
                    <p class="auth-description">Log in to access your investment portfolio</p>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="user-logged-in">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="auth-link">Logout</a>
                        </div>
                    {% endif %}

                    <form class="auth-form" method="post">
                        <div class="form-group">
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-group form-checkbox">
                            <div class="remember-me">
                                <input type="checkbox" id="_remember_me" name="_remember_me" class="form-checkbox-input">
                                <label for="_remember_me" class="form-checkbox-label">Remember me</label>
                            </div>
{#
                            <a href="{{ path('app_forgot_password_request') }}" class="forgot-password">Forgot password?</a>
#}
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                    </form>

                    <div class="auth-footer">
                        <p>Don't have an account? <a href="{{ path('app_register') }}" class="auth-link">Register</a></p>
                    </div>
                </div>

                <div class="auth-image-container blue-gradient">
                    <div class="auth-image-content">
                        <i data-lucide="trending-up" class="auth-image-icon"></i>
                        <h2 class="auth-image-title">Track Your Investments</h2>
                        <p class="auth-image-description">Get insights into your portfolio performance and make informed decisions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}